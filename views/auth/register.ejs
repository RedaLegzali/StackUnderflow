<%- include('../partials/navbar_home') %>

<div class="row my-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center mb-3">
        <i class="fas fa-user-plus"></i> Register
      </h1>
      <%- include ("../partials/messages"); %>
      <form action="/auth/register" method="POST" enctype="multipart/form-data">
        <div class="form-group">
          <label for="name">Name</label>
          <input
            type="name"
            id="name"
            name="name"
            class="form-control"
            placeholder="John Doe"
            value="<%= typeof name != 'undefined' ? name : '' %>"
          />
        </div>
        <div class="form-group">
          <label for="email">Email</label>
          <input
            type="email"
            id="email"
            name="email"
            class="form-control"
            placeholder="john@doe.com"
            value="<%= typeof email != 'undefined' ? email : '' %>"
          />
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          <input
            type="password"
            id="password"
            name="password"
            class="form-control"
            placeholder="******"
          />
        </div>
        <div class="form-group">
          <label for="passwordConfirm">Confirm Password</label>
          <input
            type="password"
            id="passwordConfirm"
            name="passwordConfirm"
            class="form-control"
            placeholder="******"
          />
        </div>
        <div class="form-group">
          <select name="team" class="custom-select">
            <option value="">Your Team</option>
            <option value="Dev">Dev</option>
            <option value="Security">Security</option>
            <option value="SysAdmin">SysAdmin</option>
            <option value="Network">Networking</option>
            <option value="DBA">DBA</option>
          </select>
        </div>
        <div class="form-group">
          <div class="input-group mb-3">
            <div class="custom-file">
              <input name="image" type="file" class="custom-file-input" id="file" >
              <label class="custom-file-label" for="file">Upload Image</label>
            </div>
          </div>
        </div>
        <button type="submit" class="btn btn-primary btn-block">
          Register
        </button>
      </form>
      <p class="lead mt-4">Have An Account? <a href="/auth/login">Login</a></p>
    </div>
  </div>
</div>
