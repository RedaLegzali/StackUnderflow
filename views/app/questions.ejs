<%- include('../partials/navbar_app') %>

<div
  class="modal fade bd-example-modal-lg"
  id="questionModal"
  tabindex="-1"
  role="dialog"
  aria-labelledby="questionModal"
  aria-hidden="true"
>
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Ask Your Question</h5>
        <button
          type="button"
          class="close"
          data-dismiss="modal"
          aria-label="Close"
        >
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
      <form action="/questions" method="POST">
        <div class="form-group">
          <input
            type="text"
            name="subject"
            class="form-control"
            placeholder="Subject"
            value="<%= typeof subject != 'undefined' ? subject : '' %>"
          />
        </div>
        <div class="form-group">
            <textarea name="body" id="editor"></textarea>
        </div>
        <div class="form-group">
          <select name="team" class="custom-select">
            <option value="">Category</option>
            <% categories.forEach(category => { %> 
            <option value="<%=category%>">
                <%= category %> 
            </option>
            <% }) %> 
          </select>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">
          Cancel
        </button>
        <button type="submit" class="btn btn-primary">Save</button>
      </div>
      </form>
    </div>
  </div>
</div>

<div class="container my-5">
    <%- include ("../partials/messages"); %>
  <% if (questions.length > 0) { %> <% questions.forEach(question => { %>
    <div class="card bg-light mb-3">
        <div class="card-header">
      <%= question.subject %> <% if (typeof question.best != 'undefined') { %>
      <span class="badge badge-success float-right"> <%= question.answers.length %> </span>
      <% } else { %>
      <span class="badge badge-light float-right"> <%= question.answers.length %> </span>
      <% } %>
        </div>
        <div class="card-body">
            <%- question.body %>
            <div>
            <p class="lead float-left"><%= question.created_at.getDate() + '-' + question.created_at.getMonth() + '-' + question.created_at.getFullYear() %></p>
            <p class="lead">
            <a href="/answer/<%= question._id %>" class="btn btn-success float-right">Answer</a>
            </p>
            </div>
        </div>
      </div>

  <% }) %> <% } else { %>
  <h2>There are no questions yet</h2>
  <% } %>
</div>

<button
  type="button"
  class="fab bg-primary btn btn-primary"
  data-toggle="modal"
  data-target="#questionModal"
>
  <i class="fas fa-plus"></i>
</button>

<script src="https://cdn.ckeditor.com/ckeditor5/27.0.0/classic/ckeditor.js"></script>
<script type="module">
    ClassicEditor
        .create( document.querySelector( '#editor' ) )
        .catch( error => {
            console.error( error );
        } );
</script>