<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <a class="navbar-brand" href="/questions">
    <img
      style="border: none; max-width: 200px"
      src="/images/logo.png"
      alt="Stack Underflow"
    />
  </a>
  <button
    class="navbar-toggler"
    type="button"
    data-toggle="collapse"
    data-target="#navbar"
    aria-controls="navbar"
    aria-expanded="false"
    aria-label="Toggle navigation"
  >
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbar">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item">
        <a class="nav-link" href="/questions">Questions</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/chat">Chat Room</a>
      </li>
    </ul>
    <div class="form-inline my-2 my-lg-0">
      <input
        id="search"
        class="form-control mr-sm-2"
        type="text"
        placeholder="Search"
      />
      <button id="search-btn" class="btn btn-primary my-2 my-sm-0" type="button">
        Search
      </button>
      <div class="dropdown">
        <a
          class="nav-link dropdown-toggle"
          id="menu"
          role="button"
          data-toggle="dropdown"
          aria-haspopup="true"
          aria-expanded="false"
        >
          <img
            src="/images/users/<%= image %>"
            width="60"
            height="60"
            class="rounded-circle"
          />
        </a>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="menu">
          <a class="dropdown-item" href="/user/profile">Profile</a>
          <a class="dropdown-item" href="/user/questions">My Questions</a>
          <a class="dropdown-item" href="/auth/logout">Logout</a>
        </div>
      </div>
    </div>
  </div>
</nav>

<script>
  document.getElementById("search-btn").addEventListener("click", (e) => {
    let link = window.location.href
    let search = document.getElementById("search").value;
    if (link.includes('search')) {
      link = link.replace(/search=\w*/, `search=${search}`)
    } else if (link.includes('category')) {
      link += `&search=${search}`
    } else {
      link = `/questions?search=${search}`
    }
    window.location.href = link
  });
</script>
