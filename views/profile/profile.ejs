<%- include('../partials/navbar_app') %>
<%- include('../partials/ask') %> 

<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Are you sure ?</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <p class="text-info">If you delete your profile all your questions will be deleted</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-primary" data-dismiss="modal">Cancel</button>
        <button type="button" id="delete-btn" class="btn btn-danger">Confirm</button>
      </div>
    </div>
  </div>
</div>

<div class="row my-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <%- include ("../partials/messages"); %>
      <form action="/user/profile" method="POST" enctype="multipart/form-data">
        <div class="form-group">
          <label for="name">Name</label>
          <input
            type="name"
            name="name"
            class="form-control"
            placeholder="John Doe"
            value="<%= user.name %>"
          />
        </div>
        <div class="form-group">
          <label for="email">Email</label>
          <input
            type="email"
            name="email"
            class="form-control"
            placeholder="john@doe.com"
            value="<%= user.email %>"
          />
        </div>
        <div class="form-group">
          <label for="password">Old Password</label>
          <input
            type="password"
            name="oldPassword"
            class="form-control"
            placeholder="******"
          />
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          <input
            type="password"
            name="password"
            class="form-control"
            placeholder="******"
          />
        </div>
        <div class="form-group">
          <label for="passwordConfirm">Confirm Password</label>
          <input
            type="password"
            name="passwordConfirm"
            class="form-control"
            placeholder="******"
          />
        </div>
        <div class="form-group">
          <select name="team" class="custom-select">
            <option value="<%= user.team %>"><%= user.team %></option>
            <% teams.forEach(team => { %>
            <option value="<%= team %>"><%= team %></option>
            <% }) %>
          </select>
        </div>
        <div class="form-group px-3 py-3 border">
          <div class="input-group mb-3">
            <div class="custom-file">
              <input
                name="image"
                type="file"
                class="custom-file-input"
                id="file"
                style="cursor: pointer"
              />
              <label class="custom-file-label" for="file">Upload Image</label>
            </div>
          </div>
          <p class="text-center">OR</p>
          <div class="dropup border mx-auto" style="width: 300px">
            <a
              class="nav-link dropdown-toggle"
              id="menu"
              role="button"
              data-toggle="dropdown"
              aria-haspopup="true"
              aria-expanded="false"
            >
              <img
                src="/images/avatars/1.svg"
                width="60"
                height="60"
                class="rounded-circle"
                id="main-avatar"
              />
              <input name="avatar" type="hidden" value="1.svg" />
              Choose an Avatar
            </a>
            <div class="dropdown-menu" aria-labelledby="menu">
              <div
                id="avatars"
                style="overflow-x: hidden"
                class="d-inline-flex justify-content-around flex-wrap row"
              ></div>
            </div>
          </div>
        </div>
        <div class="row d-flex justify-content-around">
          <button type="submit" class="btn btn-primary col-5">Edit</button>
          <button type="button" data-toggle="modal" data-target="#deleteModal" class="btn btn-danger col-5">Delete</button>
        </div>
      </form>
      <form id="delete" action="/user/delete" method="GET"></form>
    </div>
  </div>
</div>

<script>
  window.onload = () => {
    let div = document.getElementById("avatars");
    for (let i = 1; i < 17; i++) {
      let item = `
        <a class="dropdown-item col-4" style="display:inline;">
          <img
            src="/images/avatars/${i}.svg"
            class="rounded-circle avatar"
            style="cursor: pointer;"
            width="60"
            height="60"
          />
        </a>
      `;
      div.insertAdjacentHTML("beforeend", item);
    }
    document.querySelectorAll(".avatar").forEach((avatar) => {
      avatar.addEventListener("click", (e) => {
        let link = e.target.currentSrc;
        document.getElementById("main-avatar").src = link;
        let filename = link.slice(link.lastIndexOf("/") + 1);
        document.querySelector('input[name="avatar"]').value = filename;
      });
    });
  };
  document.getElementById("file").addEventListener("change", (e) => {
    document.querySelector('label[for="file"]').textContent =
      e.target.files[0].name;
  });
  document.getElementById('delete-btn').addEventListener('click', (e) => {
      document.getElementById('delete').submit()
  })
</script>
